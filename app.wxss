/**app.wxss**/
page{
  background-color: #f1f1f1;
}
.w-container{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
}
.main-container{
  padding-bottom: 15px;
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
.article_list{
  display: block;
  padding: 5px;
}
.article_list::after{
  display: block;
  clear: both;
  content: "";
}
.article_list .article_item{
  width: 50%;
  float: left;
}
.article_list .article_item .article_box{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin-bottom: 10px;
}
.article_content{
  flex: 1;
  display: block;
  margin: 0 5px;
  background-color: #fff;
  box-shadow: 1px 1px 10px rgba(0, 0, 0, 0.3);
  font-size: 24rpx;
  overflow: hidden;
  border-radius: 3px;
}
.article_title{
  padding: 5px;
  font-size: 28rpx;
  overflow:hidden;
  height:70rpx;
}
.article_image image{
  width: 100%;
  height: 100px;
}
.article_caption{
  padding: 5px;
  color: #333;
}
.video_wrapper{
  margin: 15px 0;
}
.video_box{
  background-color: #fff;
}
.video_box .video_title{
  position: relative;
  color: #333;
  padding: 10px 5px;
  font-size: 26rpx;
  z-index: 2;
  max-width: 600rpx;
  white-space: nowrap;
}
.video_img_box{
  position: relative;
  overflow: hidden;
  height: 200px;
  width: 100%;
}
.video_box{
  box-shadow: 0 0 15rpx rgba(0, 0, 0, .5);
  position: relative;
  width: 100%;
  margin-bottom: 15px;
}
.video_img{
  width: 100%;
  height: 100%;
}
.play_icon{
  -webkit-transition: all 0.3s ease;
  transition: all 0.3s ease;
  display: block;
  position: absolute;
  right: 50%;
  top: 50%;
  transform: translate(50%, -50%);
  -webkit-transform: translate(50%, -50%);
  -moz-transform: translate(50%, -50%);
  width: 35px;
  height: 35px;
  z-index: 2;
}
.play_icon image{
  width: 100%;
  height: 100%;
}
.video-hover .play_icon{
  opacity: 0;
}
.video_img_box .video_cover{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
  background-color: rgba(0, 0, 0, .3);
}