/* pages/usercenter/usercenter.wxss */
.user_info{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 200px;
  position: relative;
  color: #fff;
}
.user_info_img{
  box-shadow: 0 1px 10px rgba(255, 255, 255, .5);
  border-radius: 50%;
  background-color: #fff;
  overflow: hidden;
  width: 190rpx;
  height: 190rpx;
}
.user_info_img image{
  width: 190rpx;
  height: 190rpx;
}
.user_box{
  position: relative;
  z-index: 2;
}
.user_bg{
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
}
.user_bg image{
  width: 100%;
  height: 100%;
}
.user_bg::after{
  display: block;
  position: absolute;
  content: "";
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
  background-color: rgba(0, 0, 0, .8);
}
.bg_white{
  background-color: #fff;
}
.user_center_actions{
  margin-top: 15px;
  border-top: 1px solid #e1e1e1;
}
.user_actions_item{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 30rpx;
  border-bottom: 1px solid #e1e1e1;
  font-size: 30rpx;
}
.arrow_right{
  width: 30px;
  height: 30px;
  background-image: url(data:image/png;base64,);
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
}