/* pages/cart/cart.wxss */
.cart-empty{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 50px 0;
  height: 100%;
  font-size: 24rpx;
}
.cart-empty image{
  width: 180px;
}
.cart-buy{
  color: #4183c4;
}
.cart_list{
  padding-bottom: 80px;
}
.cart_items{
  background-color: #fff;
  position: relative;
  padding: 15px 15px;
  display: flex;
  flex-direction: column;
  border-bottom: 1px solid #e1e1e1;
}
.cart_items .cart_header{
  flex: 1;
  display: flex;
  flex-direction: row;
}
.cart_delete{
  position: absolute;
  left: 5px;
  top: 5px;
}
.cart_info{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.cart_items .cart_img{
  width: 120px;
  height: 80px;
  margin-right: 15px;
}
.cart_items .cart_img image{
  width: 100%;
  height: 100%;
}
.cart_items .cart_info{
  flex: 1;
  font-size: 24rpx;
}
.cart_items .cart_info .price{
  color: #f44336;
  font-size: 1rem;
  display: inline;
}
.cart_num{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
}
.cart_actions_group{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  font-size: 16px;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
}
.cart_actions_group .count_btn{
  padding: 15px 0;
  flex: 1;
  background-color: #000;
  color: #fff;
  text-align: center;
}