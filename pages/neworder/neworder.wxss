/* pages/neworder/neworder.wxss */
.cart_actions_group{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  font-size: 16px;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
}
.cart_actions_group .count_btn{
  padding: 15px 0;
  flex: 1;
  background-color: #000;
  color: #fff;
  text-align: center;
}
.cart_items{
  background-color: #fff;
  position: relative;
  padding: 15px 15px;
  display: flex;
  flex-direction: column;
}
.cart_items .cart_header{
  flex: 1;
  display: flex;
  flex-direction: row;
}
.cart_delete{
  position: absolute;
  left: 5px;
  top: 5px;
}
.cart_info{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.cart_items .cart_img{
  width: 120px;
  height: 80px;
  margin-right: 15px;
}
.cart_items .cart_img image{
  width: 100%;
  height: 100%;
}
.cart_items .cart_info{
  flex: 1;
  font-size: 24rpx;
}
.cart_items .cart_info .price{
  color: #f44336;
  font-size: 1rem;
  display: inline;
}
.cart_num{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
}
.order_content{
  padding:10rpx 20rpx;
  background-color: #fff;
  font-size: 32rpx;
  margin-bottom: 10px;
}
.order_number{
  border-bottom: 1px solid #e1e1e1;
  padding-bottom: 20rpx;
  margin-bottom: 20rpx;
}
.order_detail{
  display: flex;
  display: -webkit-flex;
  flex-direction: column;
  padding:30rpx 0;
  line-height:1.8;
}
.high_line{
  display: inline-block;
  color: #f44336;
}
.flex-row{
  display: flex;
  flex-direction: row;
}
.flex-item{
  flex: 1;
}
.order_price{
  text-align:right;

}
